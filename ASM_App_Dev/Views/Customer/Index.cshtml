@using ASM_App_Dev.DTOs.Responses
@model IEnumerable<BookView>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" style=" height: 500px; display: flex;">
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img src="https://songhantourist.com/upload/articles-images/images/Kdokawa_from%20Kadokawa%20Culture%20Museum.jpeg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="http://vanmauchonloc.com/wp-content/uploads/2016/05/world-in-a-book.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-3 mb-4 mb-md-0" style=" margin-bottom: 10px !important">
                    <div class="card" style=" border-radius: 10px !important ">
                        <a asp-controller="Customer" asp-action="Detail" asp-route-id=@item.Id>
                            <div style="height: 240px;align-content: center;display: flex;">
                                <img src="@item.ImageBook"
                                 class="card-img-top" style="border-radius: 10px !important;object-fit: cover;" />
                            </div>
                        </a>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3">
                                <a asp-controller="Customer" asp-action="Detail" asp-route-id=@item.Id>
                                    <h5 class="mb-0">@item.NameBook</h5>
                                </a>
                            </div>
                            <div>
                                <span src="" class="text-dark mb-0">Price: @item.PriceBook VND</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <p class="text-muted mb-0" src="">Available:<span class="fw-bold">@item.QuantityBook</span></p>
                                <a asp-controller="Orders" asp-action="Create" asp-route-id=@item.Id>Add To Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

