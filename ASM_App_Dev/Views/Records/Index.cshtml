@model IEnumerable<Order>

<script src="https://kit.fontawesome.com/a775ea28da.js" crossorigin="anonymous"></script>

<style>
    .body-container {
        display: flex;
    }

    .side-bar {
        width: 20%;
        margin: 0 20px 0 10px;
    }

    .fa-chart-line {
        margin-right: 10px;
    }

    .fa-book {
        margin-right: 10px;
    }

    .fa-list {
        margin-right: 10px;
    }

    .fa-clipboard-user {
        margin-right: 10px;
    }

    .display-container {
        width: 80%;
    }

    .form-wrapper {
        display: flex;
        margin: 10px 0 10px 0;
    }

    #search-box {
        display: flex;
    }

    #search-input {
        width: 640px;
    }

    #btn-search {
        margin: 0 10px 0 10px;
    }

    #book-management {
        color: black;
        text-decoration: none;
    }

    #category-request {
        color: black;
        text-decoration: none;
    }

    #record-management {
        color: black;
        text-decoration: none;
    }
 
</style>

<div class="body-container">
    <div class="side-bar">
        <ul class="list-group">
            <li class="list-group-item"><i class="fa-solid fa-book"></i><a id="book-management" asp-controller="Books" asp-action="Index">Book Management</a></li>
            <li class="list-group-item"><i class="fa-solid fa-list"></i><a id="category-request" asp-controller="Categories" asp-action="Index">Category Request</a></li>
            <li class="list-group-item"><i class="fa-solid fa-clipboard-user"></i><a id="record-management" asp-controller="Records" asp-action="Index">Record Management</a></li>
        </ul>
    </div>

    <div class="display-container">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">Order ID</th>
                    <th scope="col">Customer Email</th>
                    <th scope="col">Total</th>
                    <th scope="col">Date Order</th>
                    <th scope="col">Status Order</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.User.Email</td>
                        <td>@item.PriceOrder</td>
                        <td>@item.DateOrder</td>
                        <td>@item.StatusOrder</td>
                        <td>
                            <a asp-controller="Records" asp-action="Details" asp-route-id=@item.Id class="btn btn-primary btn-sm">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>