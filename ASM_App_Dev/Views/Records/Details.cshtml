@using ASM_App_Dev.ViewModels
@model CheckOut

<script src="https://kit.fontawesome.com/a775ea28da.js" crossorigin="anonymous"></script>

<style>
    .body-container {
        display: flex;
    }

    .side-bar {
        width: 20%;
        margin: 0 20px 0 10px;
    }

    .fa-chart-line {
        margin-right: 10px;
    }

    .fa-book {
        margin-right: 10px;
    }

    .fa-list {
        margin-right: 10px;
    }

    .fa-clipboard-user {
        margin-right: 10px;
    }

    .display-container {
        width: 80%;
    }

    .form-wrapper {
        display: flex;
        margin: 10px 0 10px 0;
    }

    #search-box {
        display: flex;
    }

    #search-input {
        width: 640px;
    }

    #btn-search {
        margin: 0 10px 0 10px;
    }

    #book-management {
        color: black;
        text-decoration: none;
    }

    #category-request {
        color: black;
        text-decoration: none;
    }

    #record-management {
        color: black;
        text-decoration: none;
    }

    .customer-information-container {
        border: 1px solid black;
        border-radius: 5px;
        padding: 3px 3px 3px 3px;
        margin-bottom: 10px;
    }

    h3 {
        font-size: 20px;
        font-weight: 600;
        line-height: 1.5rem;
    }

    .fa-user, .fa-envelope, .fa-location-dot {
        margin-right: 10px;
    }
   
</style>

<div class="body-container">
    <div class="side-bar">
        <ul class="list-group">
            <li class="list-group-item"><i class="fa-solid fa-book"></i><a id="book-management" asp-controller="Books" asp-action="Index">Book Management</a></li>
            <li class="list-group-item"><i class="fa-solid fa-list"></i><a id="category-request" asp-controller="Categories" asp-action="Index">Category Request</a></li>
            <li class="list-group-item"><i class="fa-solid fa-clipboard-user"></i><a id="record-management" asp-controller="Records" asp-action="Index">Record Management</a></li>
        </ul>
    </div>

    <div class="display-container">
        <div class="customer-information-container">
            <h3><i class="fa-solid fa-user"></i>Customer Name: @Model.Name </h3>
            <h3><i class="fa-solid fa-envelope"></i>Customer Address: @Model.Address </h3>
            <h3><i class="fa-solid fa-location-dot"></i>Customer Phone: @Model.Phone</h3>
            <h3><i class="fa-solid fa-location-dot"></i>Total Price: @Model.TotalPrice</h3>

        </div>
        <div class="order-detail-container">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">ID</th>
                        <th scope="col">Book Name</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var item in Model.orderDetails)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Book.NameBook</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>


    </div>
</div>